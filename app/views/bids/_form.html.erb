    <%= f.label :tier_chosen %><br>
    <%= f.number_field :tier_chosen %>
  </div>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

